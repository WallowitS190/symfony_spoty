{% extends 'base.html.twig' %}

{% block title %}Hello PerfilArtistaController!
{% endblock %}

{% block body %}
	{{ include('navbar.html.twig') }}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 1000px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		.table {
			color: white !important;
		}
	</style>

	<div class="container mt-5">
		<div class="row animated fadeIn">
			<div class="col-2">
				<img src="{{ foto }}" alt="" class="img-circle">
			</div>
			<div class="col">
				<h3>{{ nombre }}</h3>
			</div>
			<div class="col text-right">
				<button onclick="location.href='{{ path('home') }}'" class="btn btn-outline-danger">Regresar</button>
			</div>
		</div>

		<div class="row">
			<div class="col-md">
				<table class="table">
					<thead>
						<tr>
							<td>
								Foto
							</td>
							<td>
								Album
							</td>
							<td>
								Cancion
							</td>
							<td>
								Vista previa
							</td>
						</tr>
					</thead>
					<tbody>
						{% for track in tracks %}
							<tr>
								<td>
									<img src="{{ track.album.images[1].url }}" class="img img-thumb">
								</td>
								<td>
									{{ track.album.name }}
								</td>
								<td>
									{{ track.name }}
								</td>
								<td>
									<audio src="{{ track.preview_url }} " controls></audio>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</td>
			</table>
		</div>
	</div>
</div>{% endblock %}
