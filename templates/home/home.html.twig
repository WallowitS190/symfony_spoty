{% extends 'base.html.twig' %}


{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{{ include('navbar.html.twig') }}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 1200px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container mt-5">
		<h1>
			{{ titleArtista }}</h1>


		<div>
			<!--<h1>Hello {{ controller_name }}! âœ…</h1>-->


			<div class="card-columns">
				{% for dato in datos %}
					<a href="{{ path('artista', {id: dato.id }) }}">
						<div class="card">
							<img src="{{ dato.images[0]['url'] }}" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{ dato.name | upper}}</h5>
								{% for generos in dato['genres'] %}
									<span class="badge badge-pill badge-primary">{{ generos|join(", ") }}</span>
								{% endfor %}
							</div>
						</div>
					</a>
				{% endfor %}
			</div>
		</div>

		<div>
			<h1>
				{{ titleAlbum }}</h1>
		</div>

		<div class="card-columns">
			{% for albunes in album %}
				<div class="card">
					<img src="{{ albunes.images[0]['url'] }}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{ albunes.name | upper}}</h5>
						{% for generos in albunes['genres'] %}
							<span class="badge badge-pill badge-primary">{{ generos|join(", ") }}</span>
						{% endfor %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>{% endblock %}
